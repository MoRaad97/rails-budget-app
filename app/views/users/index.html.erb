<section class="login-page">
  <h1 class="app-title">My Budget</h1>
  <div class="btns-box">
    <% if user_signed_in? %>
    <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }, class:"login"%>
    <% else %>
    <%= link_to "Log In", new_user_session_path, class: "login" %>
    <%= link_to "Sign Up", new_user_registration_path, class: "signup" %>
    <% end %>
  </div>
</section>

